@model StudyLJ.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.Birthdate.Year != 1900)
    {
        <li>Birthdate: @Model.Birthdate.ToShortDateString()</li>
    }
</ul>

